#include <stdio.h>
#include <stdlib.h>
#define mask1 0x80000000

void print_binary(long num);

int main(void)
{
	unsigned long int N = 0;
	int K = 0, i = 0;

	printf("Enter N = ");
	scanf_s("%i", &N);
	printf("Enter K = ");
	scanf_s("%i", &K);
	printf("start number:");
	print_binary(N);

	N = (N << K) | (N >> (sizeof(N) * 8 - K));

	printf("final number:");
	print_binary(N);

	system("pause");
	return 0;
}

void print_binary(long num)
{
	int i = 0;
	unsigned int mask = mask1;
	printf("\nbinary N: ");
	for (i = 1; i <= 32; i++)
	{
		if ((num & mask) == 0)
			printf("0");
		else
			printf("1");

		if ((i % 8) == 0)
			printf(" ");

		mask = mask >> 1;
	}
	printf("\n");
	return;
